<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE taglib
        PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
        "http://java.sun.com/j2ee/dtd/web-jsptaglibrary_1_2.dtd">

<taglib>

	<tlib-version>1.0</tlib-version>
	<jsp-version>1.2</jsp-version>
	<short-name>page</short-name>
	<!-- 定义URI，用于唯一标识该标签 -->
	<uri>http://net.ycpower/hotel/pageTaglib</uri>

	<tag>
		<name>page</name>
		<tag-class>cn.sendto.hotel.tag.PageTaglib</tag-class>
		<attribute>
			<name>pageIndex</name>
			<!-- required = true表示使用该标签时，必须为pageIndex赋值 -->
			<required>true</required>
			<!-- rtexprvalue=true标识pageIndex属性的值可以是动态脚本，如EL表达式，jsp的表达式等，若值为false，则只能是文本 -->
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>actionName</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>pageSize</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>recordCount</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>hasPreOmit</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>hasSuffixOmit</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>pageNums</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>where</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>

</taglib>
